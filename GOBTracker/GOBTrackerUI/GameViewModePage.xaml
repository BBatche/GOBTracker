<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOBTrackerUI.GameViewModePage"
             Title="GameViewModePage">
    <VerticalStackLayout>
        
        <!-- Header -->
        <Label Text="Game View" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" />

        <!-- Team Picker -->
        <Picker x:Name="gamePicker"
         Title="Select Game"
         ItemsSource="{Binding GameDateTime}"
         FontSize="30"
         FontAttributes="Bold"
         SelectedIndexChanged="gamePicker_SelectedIndexChanged">
        </Picker>
        
    </VerticalStackLayout>
</ContentPage>